@model IEnumerable<MedicalApp.Models.Clientes.Cliente>

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Cliente Inicio de Sesión</title>
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/img/medical-icon.png">
    <link rel="icon" type="image/png" href="~/Content/img/medical-icon.png">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/login/css/style.css">
    <style>
        body {
            
            background: url("/Content/login/images/medical.jpg") no-repeat center center fixed;
            background-size: cover;
            background-color: #cccccc;
        }
    </style>
</head>
<body>
    @Html.Partial("_Notifications")
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="wrap">

                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <center>
                                        <img src="~/Content/login/images/login.png" class="img-responsive" alt="" style="max-height: 100px;">
                                        <h3>Inicio de Sesión</h3>
                                    </center>
                                </div>
                            </div>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()


                                <div class="form-group mt-3">
                                    <input type="text" class="form-control"  name="cliente" value="@ViewBag.cliente" autocomplete="off" required>
                                    <label class="form-control-placeholder" for="username">Cédula o Correo</label>
                                </div>
                                <div class="form-group">
                                    <input id="password-field" type="password"  name="contrasena" class="form-control" autocomplete="off"  value="@ViewBag.contrasena" required>
                                    <label class="form-control-placeholder"  for="password" >Contraseña</label>
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" style="background-color: #17a2b8; color:white" class="form-control btn btn-info rounded submit px-3">Iniciar</button>
                                </div>

                                <a class="small" style="margin:auto; text-align:center; display:block;" href="@Url.Action("Register", "Paciente")">Crear una Cuenta!</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Content/login/js/jquery.min.js"></script>
    <script src="~/Content/login/js/popper.js"></script>
    <script src="~/Content/login/js/bootstrap.min.js"></script>
    <script src="~/Content/login/js/main.js"></script>
    
</body>
</html>
