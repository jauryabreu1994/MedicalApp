@model MedicalApp.Models.Usuarios.UsuarioLicencia

@{
    ViewBag.Title = "Asignar Licencia de Trabajo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="panel panel-container ">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Id, new { Value = 0 })
        @Html.HiddenFor(model => model.UsuarioId, new { Value = ViewBag.UsuarioId })
        @Html.HiddenFor(model => model.FechaCreacion, new { Value = DateTime.Now })
        @Html.HiddenFor(model => model.FechaModificacion, new { Value = DateTime.Now })
        @Html.HiddenFor(model => model.Estado, new { Value = 1 })
        @Html.HiddenFor(model => model.Eliminado, new { Value = false })

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <div class="form-group">
                <label class="control-label col-md-2"> Doctor/a</label>
                <div class="col-md-9">
                    <input class="form-control text-box single-line" id="ClienteId" name="ClienteId" type="text" value="@ViewBag.Nombre" readonly>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2"> Fecha de Licencia</label>
                <div class="col-md-9">
                    <input class="form-control text-box single-line" id="FechaLicencia" name="FechaLicencia" type="date" value="@ViewBag.Fecha">
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <div class="col text-center">

                        <input type="button" value="Volver Atrás" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "UsuarioLicencia", new { UsuarioId = ViewBag.UsuarioId }) '" />
                        <input type="submit" value="Guardar" class="btn btn-info" onclick="return confirm('¿Seguro que desea guardar la licencia?')" />
                    </div>
                </div>
            </div><br />
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}