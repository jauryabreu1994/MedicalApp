@model MedicalApp.Models.Usuarios.AreaEspecialidad

@{
    ViewBag.Title = "Crear Área de Especialidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-container ">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id, new { Value = 0 })
        @Html.HiddenFor(model => model.FechaCreacion, new { Value = DateTime.Now })
        @Html.HiddenFor(model => model.FechaModificacion, new { Value = DateTime.Now })
        @Html.HiddenFor(model => model.Estado, new { Value = 1 })
        @Html.HiddenFor(model => model.Eliminado, new { Value = false })

        <div class="form-group">
            <label class="control-label col-xs-2 col-sm-2 col-xs-2 col-sm-2 col-md-2"> Cod. Área de Especialidad</label>
            <div class="col-md-9">
                @Html.DropDownList("AreaGeneralId", null, htmlAttributes: new { @class = "form-control", autocomplete = "off"  })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-xs-2 col-sm-2 col-xs-2 col-sm-2 col-md-2">Descripción</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col text-center">

                    <input type="button" value="Volver Atrás" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "AreaEspecialidad") '" />
                    <input type="submit" value="Guardar" class="btn btn-info" onclick="return confirm('¿Seguro que desea guardar el Área de Especialidad?')" />
                </div>
            </div>
        </div><br />
    </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

