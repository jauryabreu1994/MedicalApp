@model IEnumerable<MedicalApp.Models.Clientes.ClienteDocumento>

@{
    ViewBag.Title = "Documentos del Paciente: " + ViewBag.Cliente;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-container ">
    <button type="button" class="btn btn-primary btn-sm" title="Agregar Nuevo Documento del Paciente"
            style="float: right; margin-top: -15px; margin-right: 5px; padding: 5px 15px 5px 10px;"
            onclick="location.href='@Url.Action("Create", "ClienteDocumento", new { id = ViewBag.Id })'">
        <span class="fa fa-plus">&nbsp;</span> Agregar Nuevo Documento del Paciente
    </button>
    <hr />
    <table class="table-responsive table-hover table-striped display" width="100%" cellspacing="1">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    Codigo
                </th>
                <th>
                    Extension
                </th>
                <th>
                    Referencia
                </th>
                <th>
                    Fecha de Creacion
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var term in Model)
                {
                    <tr style="@(term.Eliminado == true ? "background-color:#FAE6E9" : "")">
                        <td>@Html.DisplayFor(modelItem => term.Id)</td>
                        <td>@Html.DisplayFor(modelItem => term.Codigo)</td>
                        <td>@Html.DisplayFor(modelItem => term.Extension)</td>
                        <td>@Html.DisplayFor(modelItem => term.Name)</td>
                        <td>@Html.DisplayFor(modelItem => term.FechaCreacion)</td>
                        <td align="right">
                            @if (!term.Eliminado)
                            {
                                <a class="btn btn-default btn-sm" title="Ver" href="@string.Format("../../DocClientes/{0}{1}", term.Codigo, term.Extension)" target="_blank"> <span class="fa fa-eye">&nbsp;</span></a>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>