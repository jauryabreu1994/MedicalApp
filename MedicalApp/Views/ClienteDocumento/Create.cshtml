@model MedicalApp.Models.Clientes.ClienteDocumento

@{
    ViewBag.Title = "Crear Documento de Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-container ">
    @using (Html.BeginForm("Create", "ClienteDocumento", FormMethod.Post, new { enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id, new { Value = ViewBag.Id })
        @Html.HiddenFor(model => model.FechaCreacion, new { Value = DateTime.Now })
        @Html.HiddenFor(model => model.FechaModificacion, new { Value = DateTime.Now })
        @Html.HiddenFor(model => model.Estado, new { Value = 1 })
        @Html.HiddenFor(model => model.Eliminado, new { Value = false })
        @Html.HiddenFor(model => model.ClienteHistorialId, new { Value = 1 })
        @Html.HiddenFor(model => model.Codigo, new { Value = Guid.NewGuid().ToString() })

        <div class="form-group">
            <label class="control-label col-md-2">Referencia</label>
            <div class="col-md-9">
                <input class="form-control text-box single-line" id="Referencia" name="Referencia" type="text">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Buscar Documento</label>
            <div class="col-md-9">
                <input type="file" class="form-control" id="file" name="file" />
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col text-center">

                    <input type="button" value="Volver Atrás" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Cliente")'" />
                    <input type="submit" value="Guardar" class="btn btn-info" onclick="return confirm('¿Seguro que desea guardar el Documento del Paciente?')" />
                </div>
            </div>
        </div><br />
    </div>
    }
</div>
