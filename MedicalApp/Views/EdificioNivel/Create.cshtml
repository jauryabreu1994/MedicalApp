@model MedicalApp.Models.Edificios.EdificioNivel

@{
    ViewBag.Title = "Crear Nivel del Edificio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-container ">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id, new { Value = 0 })
        @Html.HiddenFor(model => model.FechaCreacion, new { Value = DateTime.Now })
        @Html.HiddenFor(model => model.FechaModificacion, new { Value = DateTime.Now })
        @Html.HiddenFor(model => model.Estado, new { Value = 1 })
        @Html.HiddenFor(model => model.Eliminado, new { Value = false })

        <div class="form-group">
            <label class="control-label col-md-2">Edificio</label>
            <div class="col-md-9">
                @Html.DropDownList("EdificioId", null, htmlAttributes: new { @class = "form-control", autocomplete = "off"  })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nivel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Nivel, new { htmlAttributes = new { @class = "form-control", autocomplete = "off"  } })
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col text-center">

                    <input type="button" value="Volver Atrás" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "EdificioNivel") '" />
                    <input type="submit" value="Guardar" class="btn btn-info" onclick="return confirm('¿Seguro que desea guardar el Nivel del Edificio?')" />
                </div>
            </div>
        </div><br />
    </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
