@model MedicalApp.Models.Empresas.Empresa

@{
    ViewBag.Title = "Eliminar la Empresa: " + Model.Nombre;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    p {
        margin-bottom: 0px;
    }
</style>
<div class="panel panel-container text-center">
    <h3>¿Estás seguro/a que quieres eliminar este Usuario?</h3>
    <div>
        <hr />

        <p><label>Nombre Comercial: </label> @Html.DisplayFor(model => model.Nombre)</p>
        <p><label>RNC: </label> @Html.DisplayFor(model => model.Identificacion)</p>
        <p><label>Nombre Fiscal: </label> @Html.DisplayFor(model => model.NombreFiscal)</p>

        <p><label>Pais: </label> @Html.DisplayFor(model => model._Pais.Descripcion)</p>
        <p><label>Ciudad: </label> @Html.DisplayFor(model => model._Ciudad.Descripcion)</p>

        <p><label>Direccion: </label> @Html.DisplayFor(model => model.Direccion)</p>
        <p><label>Correo: </label> @Html.DisplayFor(model => model.Correo)</p>
        <p><label>Teléfono: </label> @Html.DisplayFor(model => model.Telefono)</p>
        <p><label>CodiLicencia: </label> @Html.DisplayFor(model => model.CodiLicencia)</p>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="container">
                <div class="row">
                    <div class="col text-center">

                        <input type="button" value="Volver Atrás" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Usuario") '" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                    </div>
                </div>
            </div><br /><br />
        }
    </div>
</div>
